            <div class="row">
                <div class="col-6-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6-md-3">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

