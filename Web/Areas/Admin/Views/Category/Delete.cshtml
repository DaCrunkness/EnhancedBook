@model Models.DataModels.Category
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
